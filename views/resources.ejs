<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CareerFasten</title>
    <!--========== BOX ICONS ==========-->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <!--========== CSS ==========-->
    <link rel="stylesheet" href="/css/home.css" />
    <link rel="stylesheet" href="/css/resources.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <!--========== HEADER ==========-->
    <header class="header">
      <div class="header__container">
        <div class="header__search">
          <input
            type="text"
            value="<%=user.usn.toUpperCase()%>"
            class="header__input user"
            id="usn"
            readonly
          />
        </div>
        <a href="/home" class="header__logo">CareerFasten</a>
        <div class="header__search">
          <input
            type="button"
            value="PlayGround"
            class="header__input"
            id="playground"
            onclick="window.location.href='/playground'"
          />
        </div>
        <div class="header__toggle">
          <i class="bx bx-menu" id="header-toggle"></i>
        </div>
      </div>
    </header>
    <!--========== NAV ==========-->
    <div class="nav" id="navbar">
      <nav class="nav__container">
        <div>
          <a href="/home" class="nav__link nav__logo">
            <i class="bx bxs-disc nav__icon"></i>
            <span class="nav__logo-name">CareerFasten</span>
          </a>
          <div class="nav__list">
            <div class="nav__items">
              <a href="/home" class="nav__link active">
                <i class="bx bx-home nav__icon"></i>
                <span class="nav__name">Home</span>
              </a>
              <a href="/roadmap" class="nav__link">
                <i class="bx bx-map nav__icon"></i>
                <span class="nav__name">RoadMap</span>
              </a>
              <a href="/upcoming" class="nav__link">
                <i class="bx bx-repost nav__icon"></i>
                <span class="nav__name">Upcoming_Updates</span>
              </a>
              <a href="/resources" class="nav__link">
                <i class="bx bx-note nav__icon"></i>
                <span class="nav__name">Resources</span>
              </a>
              <a href="/resumebuilder" class="nav__link">
                <i class="bx bxs-book-content nav__icon"></i>
                <span class="nav__name">Resume_Builder</span>
              </a>
              <a href="/discuss" class="nav__link">
                <i class="bx bx-message-rounded nav__icon"></i>
                <span class="nav__name">Discuss</span>
              </a>
              <a href="/logout" class="nav__link nav__logout">
                <i class="bx bx-log-out nav__icon"></i>
                <span class="nav__name">Log Out</span>
              </a>
            </div>
          </div>
        </div>
      </nav>
    </div>
    <!--========== CONTENTS ==========-->
    <main>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-10 ml-20 mt-10"
        id="margin_resources"
      >
        <% resources.forEach(resource => { %>
        <div class="bg-white p-6 rounded shadow-md mt-10">
          <strong class="d-inline-block mb-2 text-primary">
            <%= resource.category %>
          </strong>
          <h3 class="mb-0"><%= resource.title %></h3>
          <div class="mb-1 text-muted">
            Updated <%= new Date(resource.date).toLocaleDateString() %>
          </div>
          <p class="card-text mb-auto" id="description"><%= resource.description %></p>
        </div>
        <% }); %>
      </div>
    </main>
    <!--========== FOOTER ==========-->
    <footer class="footer mt-10 py-3 bg-light">
      <div
        class="text-center p-4"
        style="background-color: rgba(0, 0, 0, 0.05)"
      >
        Â© 2024 Copyright:
        <a class="text-body" href="https://careerfasten.com"
          >careerfasten.com</a
        >
      </div>
    </footer>
    <!--========== MAIN JS ==========-->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script src="/javascript/main.js"></script>
  </body>
</html>
